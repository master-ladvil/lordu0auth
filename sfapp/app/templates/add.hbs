<h4>SalesForce profile</h4>
<form>
    <table>
        <tr>
            <td><b>Profile Name : </b></td>
            <td><input type="text" id="profilename"></td>
            
        </tr>
        <tr>
            <td><b>Permissions : </b></td>
            <td>
        <select id = "perm">
            {{#each this.model.profile as |row|}}
            <option value = {{row.perm}}>{{row.perm}}</option>
            {{/each}}
        </select>
        </td></tr>
            <button type="submit" {{action "getprofile" }}>submit</button>
    </table>
</form>
